<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.berfy.sdk.asingle">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".main.view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".demo.viewpager.view.ViewPagerDemoActivity"></activity>
        <activity android:name=".demo.viewpager.view.StatusBarDemoActivity"></activity>
        <activity android:name=".demo.notify.view.NotifyActivity"></activity>
        <activity android:name=".demo.fragment.view.DemoFragmentActivity"></activity>
        <activity android:name=".demo.permission.view.PermissionActivity"></activity>
        <activity android:name=".demo.dialog.view.DialogDemoActivity"></activity>
        <activity android:name=".demo.record.view.AudioRecordActivity"></activity>
    </application>

</manifest>