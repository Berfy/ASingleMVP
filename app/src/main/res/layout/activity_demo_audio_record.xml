<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_record_path_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_10"
        android:text="录音文件路径"
        android:textSize="@dimen/font_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_record_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_10"
        android:gravity="center"
        android:text=""
        android:textSize="@dimen/font_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_record_path_title" />

    <Button
        android:id="@+id/btn_record_play"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_30"
        android:layout_marginTop="@dimen/space_10"
        android:text="播放"
        android:textSize="@dimen/font_8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_record_path" />

    <Button
        android:id="@+id/btn_record_record"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_40"
        android:layout_marginBottom="@dimen/space_20"
        android:layout_marginLeft="@dimen/space_20"
        android:text="录音"
        android:textSize="@dimen/font_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <cn.berfy.sdk.mvpbase.view.audio.AudioRecordButton
        android:id="@+id/btn_record_touchrecord"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_40"
        android:layout_marginBottom="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:layout_marginTop="@dimen/space_10"
        android:text="长按录音"
        android:textSize="@dimen/font_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>