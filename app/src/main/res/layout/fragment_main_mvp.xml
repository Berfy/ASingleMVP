<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/space_20"
            android:paddingLeft="@dimen/space_10"
            android:paddingRight="@dimen/space_10">

            <TextView
                android:id="@+id/sample_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:gravity="center_horizontal"
                android:text="Hello World!" />

            <cn.berfy.sdk.mvpbase.view.RippleView
                android:id="@+id/btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/space_10"
                android:background="@drawable/button_normal"
                android:gravity="center"
                android:text="Ripple效果"
                android:textAppearance="?android:attr/textAppearanceMedium"
                ripple:alphaFactor="1"
                ripple:hover="true"
                ripple:rippleColor="@color/colorAccent" />

            <cn.berfy.sdk.mvpbase.view.RippleView
                android:id="@+id/btn_titlebar_show"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                android:layout_marginTop="@dimen/space_10"
                android:background="@drawable/button_normal"
                android:gravity="center"
                android:text="隐藏标题栏"
                android:textAppearance="?android:attr/textAppearanceMedium"
                ripple:alphaFactor="1"
                ripple:hover="true"
                ripple:rippleColor="@color/colorAccent" />

            <cn.berfy.sdk.mvpbase.view.RippleView
                android:id="@+id/btn_viewpager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                android:layout_marginTop="@dimen/space_10"
                android:background="@drawable/button_normal"
                android:gravity="center"
                android:text="ViewPager"
                android:textAppearance="?android:attr/textAppearanceMedium"
                ripple:alphaFactor="1"
                ripple:hover="true"
                ripple:rippleColor="@color/colorAccent" />

            <cn.berfy.sdk.mvpbase.view.RippleView
                android:id="@+id/btn_statusbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                android:layout_marginTop="@dimen/space_10"
                android:background="@drawable/button_normal"
                android:gravity="center"
                android:text="沉浸式"
                android:textAppearance="?android:attr/textAppearanceMedium"
                ripple:alphaFactor="1"
                ripple:hover="true"
                ripple:rippleColor="@color/colorAccent" />

            <cn.berfy.sdk.mvpbase.view.RippleView
                android:id="@+id/btn_notify"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                android:layout_marginTop="@dimen/space_10"
                android:background="@drawable/button_normal"
                android:gravity="center"
                android:text="通知管理"
                android:textAppearance="?android:attr/textAppearanceMedium"
                ripple:alphaFactor="1"
                ripple:hover="true"
                ripple:rippleColor="@color/colorAccent" />

            <cn.berfy.sdk.mvpbase.view.RippleView
                android:id="@+id/btn_fragment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                android:layout_marginTop="@dimen/space_10"
                android:background="@drawable/button_normal"
                android:gravity="center"
                android:text="Fragment"
                android:textAppearance="?android:attr/textAppearanceMedium"
                ripple:alphaFactor="1"
                ripple:hover="true"
                ripple:rippleColor="@color/colorAccent" />

            <cn.berfy.sdk.mvpbase.view.RippleView
                android:id="@+id/btn_permission"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                android:layout_marginTop="@dimen/space_10"
                android:background="@drawable/button_normal"
                android:gravity="center"
                android:text="获取权限"
                android:textAppearance="?android:attr/textAppearanceMedium"
                ripple:alphaFactor="1"
                ripple:hover="true"
                ripple:rippleColor="@color/colorAccent" />

            <cn.berfy.sdk.mvpbase.view.RippleView
                android:id="@+id/btn_dialog"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                android:layout_marginTop="@dimen/space_10"
                android:background="@drawable/button_normal"
                android:gravity="center"
                android:text="Dialog"
                android:textAppearance="?android:attr/textAppearanceMedium"
                ripple:alphaFactor="1"
                ripple:hover="true"
                ripple:rippleColor="@color/colorAccent" />

            <cn.berfy.sdk.mvpbase.view.RippleView
                android:id="@+id/btn_audio_record"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                android:layout_marginTop="@dimen/space_10"
                android:background="@drawable/button_normal"
                android:gravity="center"
                android:text="录制语音(弹出框)"
                android:textAppearance="?android:attr/textAppearanceMedium"
                ripple:alphaFactor="1"
                ripple:hover="true"
                ripple:rippleColor="@color/colorAccent" />
        </LinearLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>