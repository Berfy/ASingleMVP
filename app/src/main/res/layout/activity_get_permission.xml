<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/space_10">

    <cn.berfy.sdk.mvpbase.view.RippleView
        android:id="@+id/btn_all_permissions"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_45"
        android:layout_marginTop="@dimen/space_10"
        android:background="@drawable/button_normal"
        android:gravity="center"
        android:text="获取所有权限"
        android:textAppearance="?android:attr/textAppearanceMedium"
        ripple:alphaFactor="1"
        ripple:hover="true"
        ripple:rippleColor="@color/colorAccent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_10"
        android:gravity="center"
        android:text="获取单个权限"
        android:textColor="@color/color_black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:layout_marginTop="@dimen/space_10"
        android:background="@color/color_titlebar_light_small_title"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_permission_camera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_40C9AA51"
            android:layout_weight="1"
            android:gravity="center"
            android:text="相机"
            android:textColor="@color/color_black" />

        <TextView
            android:id="@+id/tv_permission_sd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_b2b2b2"
            android:layout_weight="1"
            android:gravity="center"
            android:text="存储"
            android:textColor="@color/color_black" />

        <TextView
            android:id="@+id/tv_permission_gps"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_fff195"
            android:layout_weight="1"
            android:gravity="center"
            android:text="定位"
            android:textColor="@color/color_black" />

        <TextView
            android:id="@+id/tv_permission_call"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent_half"
            android:layout_weight="1"
            android:gravity="center"
            android:text="打电话"
            android:textColor="@color/color_black" />

    </LinearLayout>
</LinearLayout>